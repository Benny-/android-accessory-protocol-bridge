<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.ict.aapbridgesample"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-feature
        android:name="com.android.future.usb.accessory"
        android:required="false" />

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="nl.ict.aapbridgesample.BluetoothAccessoryActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="nl.ict.aapbridgesample.ServiceSelectionActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_ACCESSORY_ATTACHED" />
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_ACCESSORY_ATTACHED"
                android:resource="@xml/accessory_filter" />
        </activity>
        <activity android:name="nl.ict.aapbridgesample.DbusMethodsActivity" >
        </activity>
        <activity android:name="nl.ict.aapbridgesample.DbusSignalActivity" >
        </activity>

        <uses-library
            android:name="com.android.future.usb.accessory"
            android:required="false" />

        <activity
            android:name="nl.ict.aapbridgesample.BulkActivity"
            android:label="@string/title_activity_bulk" >
        </activity>
    </application>

</manifest>