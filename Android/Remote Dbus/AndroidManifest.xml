<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.ict.aapbridgesample"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-feature android:name="com.android.future.usb.accessory" android:required="false"/>
	<uses-sdk android:minSdkVersion="10" />
    
	<uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
	<uses-permission android:name="android.permission.BLUETOOTH" />
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".PairedBtListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AccessoryActionActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_ACCESSORY_ATTACHED" />
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_ACCESSORY_ATTACHED"
                android:resource="@xml/accessory_filter" />
        </activity>
        <activity android:name=".CallRemoteFunctionActivity" >
        </activity>
        <activity android:name=".SignalFilterActivity" >
        </activity>
        <uses-library android:name="com.android.future.usb.accessory" android:required="false"/>
    </application>

</manifest>